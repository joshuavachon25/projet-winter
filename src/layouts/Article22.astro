---
import Retour from '../components/Retour.astro';

export interface Props {
	title: string;
}

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{frontmatter.title}</title>
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Université de Sherbrooke" />
    <meta name="author" content="Cégep de Sherbrooke" />
    <meta name="author" content="Joshua Vachon" />
    <meta name="description" content={frontmatter.description}>
    <meta name="keywords" content="prison, sherbrooke, archives, prison winter, université de sherbrooke, cégep de sherbrooke, histoire, criminologie, histoire carcérale">
    <meta property="og:title" content={frontmatter.title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url)} />
    <meta property="og:image" content={new URL(`/assets/img/main_thumb.png`, Astro.url)} />
    <meta name="twitter:title" content={frontmatter.title}>
    <meta name="twitter:description" content={frontmatter.description}>
    <meta name="twitter:image" content={new URL(`/assets/img/main_thumb.png`, Astro.url)}>
    <meta name="twitter:card" content="summary_large_image">
	</head>
	<body>
    <a href="/2020" class="btn-change-edition">Voir édition 2020</a>
    <main class="min-h-screen w-full fixed">
      <div class="content-wrapper"></div>
      
    </main>
    <div class="wrap">
      <div class="content rounded-md prose prose-lg max-w-none my-20">
        <Retour annee="2022"/>
        <slot />
      </div>
    </div>
    
    <a href="/2022/a-propos" class="btn-info">À propos</a>
	</body>
</html>

<style>
  main{
    background: #1f1d1b;
    position: fixed;
  }  

  .content-wrapper{
    @apply h-screen;
    background-image: url('/assets/bg1.png');
    background-repeat: no-repeat;
    background-size: cover;
    filter: opacity(0.05); 
  }

  .btn-info{
    position: absolute;
    right: 10px;
    top:10px;
    text-align: center;
    margin-bottom: 10px;
    padding: 5px 20px;
    border-radius: 3px;
    font-weight: 500;
    border: 2px solid rgb(254 252 232);
    color: rgb(254 252 232);
    transition: 1s;
  }

  .btn-change-edition{
    position:absolute;
    left: 10px;
    top:10px;
    text-align: center;
    margin-bottom: 10px;
    padding: 5px 20px;
    border-radius: 3px;
    font-weight: 500;
    border: 2px solid rgb(254 252 232);
    color: rgb(254 252 232);
    transition: 1s;
    z-index:999;
  }

  .btn-theme:hover, .btn-info:hover, .btn-change-edition:hover{
    background: rgb(254 252 232);
    color: rgba(19,17,24,1);
  }

  .wrap{
    position: absolute;
    top:0;
    left:0;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .content{
    @apply w-full lg:w-1/2;
    background: rgb(231, 231, 231);
    height: min-content;
    //margin: 150px 0px;
  }

</style>