---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>


<style>
  .pages-2020{
    background: linear-gradient(0deg, rgba(19,17,24,1) 0%, rgba(47,42,46,1) 100%);
  }

  .pages-2022{
    background: linear-gradient(0deg, rgba(41,20,14,1) 0%, rgba(59,41,36,1) 100%);
}
</style>
